<?xml version="1.0" encoding="utf-8"?>
<!-- 我的抢购订单-主页  -->
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    
   	<include android:id="@+id/common_title"
   		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
   		layout="@layout/common_title"/>
  	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
  		android:background="@drawable/order_bg"
  		android:orientation="vertical">
	  	<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			style="@style/common_title_top"
			android:layout_marginLeft="20dip"
	   		android:background="@drawable/order_home_top">
		   	<ImageButton android:id="@+id/phone_400" 
		   		android:layout_height="wrap_content"
		   		android:layout_width="wrap_content"
		   		android:layout_alignParentRight="true"
		   		android:background="@drawable/common_phone_400_selector"/>	
	  	</RelativeLayout>
	    <!-- 抢购订单列表  -->
	  	<ListView android:id="@+id/order_home_list"
	  	    android:layout_width="fill_parent"
	  	    android:layout_height="fill_parent"
	  	    android:cacheColorHint="#FFFFFF"
	  	    android:divider="@color/white"
	  	    android:dividerHeight="2dip"
	  	    android:paddingLeft="15dip"
	  	    android:paddingRight="15dip"
	  	    android:paddingTop="5dip" 
	  	    android:scrollbars="none">
	  	</ListView>
    </LinearLayout>
</LinearLayout>
