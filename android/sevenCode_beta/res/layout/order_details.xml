<?xml version="1.0" encoding="utf-8"?>
<!-- 我的抢购订单-订单详情  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <include android:layout_width="fill_parent"
   		android:layout_height="wrap_content" 
   		layout="@layout/common_title"/>
   <ScrollView android:layout_width="fill_parent"	
        android:layout_height="fill_parent" 
   		android:scrollbars="none" 
  		android:background="@drawable/order_bg">		
   <LinearLayout android:layout_width="fill_parent" 
       android:layout_height="fill_parent" 
       android:orientation="vertical" 
       android:paddingLeft="15dip"
       android:paddingRight="15dip"
       android:paddingBottom="20dip">
        <!-- 顶部图片  -->
	    <RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			style="@style/common_title_top"
	   		android:background="@drawable/order_detail_top">
		   	<ImageButton android:id="@+id/phone_400" 
		   		android:layout_height="wrap_content"
		   		android:layout_width="wrap_content"
		   		android:layout_alignParentRight="true"
		   		android:background="@drawable/common_phone_400_selector"/>	
	  	</RelativeLayout>
	   <!-- 订单详情  -->	
	   <TextView android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:text="订单详情"
	    	style="@style/order_title_text" />
	   <TableLayout style="@style/order_table_layout">
	   		<TableRow>
	    		<TextView android:text="@string/order_code"
	    			style="@style/order_content_text_label"/>
	    		<TextView android:id="@+id/order_id" 
	    			android:text="订单号" 
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	    	<TableRow>
	    		<TextView android:text="@string/order_total_price"
	    			style="@style/order_content_text_label"/>
	    		<TextView android:id="@+id/order_total_price" 
	    			android:text="订单总金额"
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	    	 <TableRow>
		   		<TextView android:text="订单生成时间"
		   			style="@style/order_content_text_label"/>
		   		<TextView android:id="@+id/order_create_time" 
		   			android:text="2011-09-24 21:23:41"
		   			style="@style/order_content_text_1"/>
			 </TableRow> 
	    	<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/order_status"/>
	    		<TextView android:id="@+id/order_status" 
	    			android:text="订单状态"
	    			style="@style/order_status_default"/>
	    	</TableRow>	
	   </TableLayout>
	   <!-- 商品详情  -->
	   <TextView android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:text="商品详情 "
	    	style="@style/order_title_text" />
	   <TableLayout style="@style/order_table_layout">
	   		<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/goods_name"/>
	    		<TextView android:id="@+id/order_goods_name"
	    			android:text="商品名称"
	    			android:textColor="#000000"/>
	    	</TableRow>	
	    	<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/goods_count"/>
	    		<TextView android:id="@+id/order_goods_count" 
	    			android:text="1"
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	    	<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/goods_total_price"/>
	    		<TextView android:id="@+id/order_goods_total_price" 
	    			android:text="商品总金额 "
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	    	<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/order_service_price"/>
	    		<TextView android:id="@+id/order_service_price" 
	    			android:text="服务费"
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	    	<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/order_total_price"/>
	    		<TextView android:id="@+id/order_total_price_2" 
	    			android:text="订单总金额"
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	   </TableLayout>
	   <!-- 收货详情 -->
	   <TextView android:id="@+id/customer_details"
	   		android:layout_width="fill_parent"
	   		android:layout_height="wrap_content"
	   		android:text="收货详情"
	   		style="@style/order_title_text"/>
	   <TableLayout style="@style/order_table_layout">
	   		<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/customer_name"/>
	    		<TextView android:id="@+id/order_customer_name" 
	    			android:text="收货人 "
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	    	<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/customer_phone"/>
	    		<TextView android:id="@+id/order_customer_phone" 
	    			android:text="@string/customer_phone"
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	    	<TableRow>
	    		<TextView style="@style/order_content_text_label"
	    			android:text="@string/customer_address"/>
	    		<TextView android:id="@+id/order_customer_address" 
	    			android:text="收货人地址 "
	    			style="@style/order_content_text_1"/>
	    	</TableRow>	
	   	</TableLayout>
   	</LinearLayout>
   	</ScrollView>
</LinearLayout>
