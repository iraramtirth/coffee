<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight">

	<!-- Left复选框 -->
	<CheckBox android:id="@+id/contact_chx" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:layout_alignParentLeft="true" />
	<!-- Right号码 -->
	<TextView android:id="@+id/contact_phones"
		android:layout_height="fill_parent" android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_marginRight="10sp" android:gravity="center_vertical"
		android:layout_alignParentRight="true" />
	<!-- 联系人头像 -->
	<!-- <ImageView android:id="@+id/contact_photo" android:layout_width="wrap_content" 
		android:layout_height="fill_parent" android:src="@drawable/icon" android:layout_toRightOf="@id/contact_chx"> 
		</ImageView> -->
	<!-- 联系人姓名 -->
	<TextView android:id="@+id/contact_name" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_marginLeft="5sp" android:gravity="center_vertical"
		android:layout_toRightOf="@id/contact_chx" />


</RelativeLayout>
