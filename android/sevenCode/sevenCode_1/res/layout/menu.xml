<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="134dip" 
    android:layout_width="fill_parent"
  	android:background="@drawable/menu_bg">
  	
   <!-- 服务承诺  - 关于 -->
   <TableRow android:layout_weight="1"> 
	    <RelativeLayout android:id="@+id/menu_item_0"
	    	style="@style/menu_layout">
	    	<TextView android:id="@+id/menu_ico_0"
	    		android:text="@string/menu_item_0"
		        style="@style/menu_text"/>
		    <ImageView android:src="@drawable/menu_service"
		        style="@style/menu_iamge"
		        android:layout_above="@id/menu_ico_0"/>
	   </RelativeLayout>
	   <!-- 买卖宝商城  -->
	   <RelativeLayout android:id="@+id/menu_item_2"
	   		style="@style/menu_layout">
	   		<TextView android:id="@+id/menu_ico_2"
	   		 	android:text="@string/menu_item_2"
		        style="@style/menu_text"/>
		    <ImageView android:src="@drawable/menu_mmb"
		        style="@style/menu_iamge"
		        android:layout_above="@id/menu_ico_2"/>
	   </RelativeLayout>
   </TableRow>
   <!-- 版本   - 退出 -->
   <TableRow android:layout_weight="1"> 
	   <RelativeLayout android:id="@+id/menu_item_1" 
	   		style="@style/menu_layout">
	   		<TextView android:id="@+id/menu_ico_1"
	   			android:text="版本"
		        style="@style/menu_text"/>
		    <ImageView android:src="@drawable/menu_version"
		    	android:layout_above="@id/menu_ico_1"
		        style="@style/menu_iamge"/>
	   </RelativeLayout>
	    <RelativeLayout android:id="@+id/menu_item_3" 
	    	style="@style/menu_layout">
	    	<TextView android:id="@+id/menu_ico_3" 
	    		android:text="退出"
		        style="@style/menu_text"/>
		    <ImageView android:layout_above="@id/menu_ico_3"
		        android:src="@drawable/menu_exit"
		       	style="@style/menu_iamge"/>
	   </RelativeLayout>
   </TableRow>
</TableLayout>