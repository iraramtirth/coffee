<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="268dip"
  android:layout_height="wrap_content">
  <LinearLayout  android:id="@+id/alert_title_layout"
   		android:layout_height="wrap_content"
   		android:layout_width="fill_parent"
   		android:paddingTop="10dip"
  		android:background="@drawable/alert_dlalog_top" 
  		android:layout_alignParentTop="true">
      <ImageView android:layout_width="42dip"
          android:layout_height="42dip"
          android:layout_marginLeft="20dip"
          android:background="@drawable/icon1" 
          android:scaleType="centerInside"/>
	  <TextView android:layout_height="wrap_content"
	   		android:layout_width="fill_parent"
	   		android:text="@string/help_dialog_title"
	   		android:textColor="@color/font_sys_2"
	   		android:gravity="center"
	   		android:layout_gravity="center_vertical"
	   		android:textSize="20sp"
	   		android:layout_marginRight="20dip"/>
  </LinearLayout>
  <LinearLayout android:id="@+id/help_content_layout" 
      	android:layout_height="wrap_content"
   		android:layout_width="fill_parent"
   		android:background="@drawable/alert_dlalog_center"
   		android:paddingLeft="25dip"
   		android:paddingRight="20dip"
   		android:orientation="vertical">
	  <TextView android:id="@+id/help_content_title"
	   		android:layout_height="wrap_content"
	   		android:layout_width="fill_parent"
	   		android:gravity="left"
	   		android:textColor="@color/font_sys_1"
	   		android:textSize="15sp"
	   		android:text="@string/app_name"/>
	  <TextView android:id="@+id/help_content_1"
	   		android:layout_height="wrap_content"
	   		android:layout_width="fill_parent"
	   		android:gravity="center_horizontal"
	   		android:textColor="@color/font_sys_3"
	   		android:textSize="13sp"
	   		android:lineSpacingMultiplier="1.3"
	   		android:text="@string/help_dialog_10"/>

	  <TextView android:id="@+id/help_content_2"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:gravity="left"
	      android:text="@string/help_dialog_11"
	      android:textColor="@color/font_sys_3"
	      android:textSize="13sp" 
	      android:lineSpacingMultiplier="1.3"/>
	  <TextView android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:gravity="center"
	      android:textSize="13sp"
	      android:textColor="#FF9900" 
	      android:text="请您放心选购!"/>
  </LinearLayout>
  <RelativeLayout android:id="@+id/alert_button"
   		android:layout_height="wrap_content"
   		android:layout_width="fill_parent"
   		android:background="@drawable/alert_dlalog_bottom"
   		android:layout_below="@id/help_content_layout">
   		<!-- 右侧按钮 -->
   		<Button android:id="@+id/help_btn_next"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_alignParentRight="true"
   			android:layout_marginRight="34dip"
   			android:layout_marginTop="5dip"
   			android:background="@drawable/help_next_action_selector"/>
   	</RelativeLayout>
</LinearLayout>
