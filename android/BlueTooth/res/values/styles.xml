<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <style name="AppTheme" parent="AppBaseTheme"></style>
    <style name="MenuTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#6F6B6B</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 整体layout样式 -->
    <style name="common_layout_style">
        <item name="android:background">#ffe1e0de</item>
    </style>
    <style name="common_layout_body_style">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">18.0dip</item>
        <item name="android:paddingTop">26.0dip</item>
        <item name="android:paddingRight">18.0dip</item>
        <item name="android:paddingBottom">18.0dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="CommonButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40.0dip</item>
        <item name="android:minHeight">40.0dip</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
    </style>
    <style name="CommonActionButton" parent="@style/CommonButton">
        <item name="android:background">@drawable/btn_style_one</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <!-- 顶部title样式 -->
    <style name="common_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/common_title_bg</item>
    </style>
    <!-- ListView通用样式 -->
    <style name="common_list_style">
        <item name="android:divider">@drawable/common_list_line</item>
        <item name="android:scrollbars">none</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>
    <!-- 通用列表EmptyView(TextView)样式 -->
    <style name="common_list_empty_view">
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">#666666</item>
    </style>
    <!-- 通用列表标题样式 -->
    <style name="common_item_title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dip</item>
    </style>
    <!-- 通用列表内容样式 -->
    <style name="common_item_desc">
        <item name="android:textColor">#666666</item>
    </style>
    <!-- 1px水平横线颜色样式 -->
    <style name="common_line_bg">
        <item name="android:background">#C9C9C9</item>
    </style>
    <!-- 通用列表分割 -->
    <style name="shop_segment">
        <item name="android:layout_height">15dip</item>
        <item name="android:background">#EFEFF4</item>
    </style>
    <!-- 开店, 销售信息 -->
    <style name="shop_sell_info_item_1">
        <item name="android:textColor">#666666</item>
    </style>
    <!-- TableLayout布局左侧文本通用样式 -->
    <style name="common_table_left">
        <item name="android:textSize">16dip</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>
</resources>